node{
    def bd = BUILD_NUMBER
    stage('Git Clone'){
        git branch: 'dev', url: 'https://github.com/Kri4hna1834/maven-web-application.git'
    }
    
    stage('maven clean package'){
        def mavenHome = tool name: "maven"
        
        sh "${mavenHome}/bin/mvn clean package"
    }
    
    stage('Dokcer build image'){
        sh "docker build -t krishnapasnur/maven-web-app:${bd} ."
    }
    
    stage('docker login and image push'){
        sh "docker login -u krishnapasnur -p 123456789"
        sh "docker push krishnapasnur/maven-web-app:${bd}"
    }
    
    stage('deployeing via K8s'){
        sh "kubectl apply -f mavenwebappdeployment.yaml"
    }
    
    stage ('know the port'){
        sh "kubectl get service -o wide --all-namespaces"
        sh "kubectl get pods -o wide "
    }
}
